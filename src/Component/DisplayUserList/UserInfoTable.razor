@using ContosoCrafts.WebSite.Models
@using ContosoCrafts.WebSite.Services;
@inject JsonFileUserService UserService

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>User Information</h1>
            <p>This page will display all our users.</p>
            <hr />

            @{
                <div class="container">
                    <table id="sTable" width="100%">
                        <!-- table head-->
                        <thead>
                            <!--table row -->
                                        <tr>
                                            <!-- table header cell element-->
                                            <th>#</th>
                                            <th>Username</th>
                                            @*<th>Email</th>*@
                                            @*<th>Location</th>*@


                                        </tr>
                        </thead>
                        <!--table body -->
                        <tbody>
                            <!-- Table row -->
                            @{
                                var i = 1;
                                foreach (UserModel user in UserService.GetUsers())
                                {
                                                        <tr data-toggle="modal" data-target="#exampleModalCenter-@i">
                                                            <td id="rowId">@i</td>
                                                            <td>@user.Username</td>
                                                            @*<td>@user.Email</td>*@
                                                            @*<td>@user.Location</td>*@

                                                        </tr>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalCenter-@i" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="exampleModalLongTitle">@user.Username</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body modal-body-content">
                                                    <p><b>ID: </b>@user.UserID</p>
                                                    <p><b>Email: </b>@user.Email</p>
                                                    <p><b>Location: </b>@user.Location</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>