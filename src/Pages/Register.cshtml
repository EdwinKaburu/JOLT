@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService
@model ContosoCrafts.WebSite.Pages.RegisterModel
@*@model RegisterModel*@

@{
    ViewData["Title"] = "Register";
}

<div class="container">

    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div class="card">
                        <div class="card-body">
                            <form id='registrationForm' method="post" asp-page="Register">
                                @Html.HiddenFor(x => x.User.userID)

                                <div class="form-group">
                                    <label asp-for="User.username">Username</label>
                                    <div class="input-group mb-3">
                                        @Html.EditorFor(model => model.User.username, new { htmlAttributes = new { id = "username", @class = "form-control", placeholder = "Username" } })
                                    </div>
                                    <span id="usernameError" asp-validation-for="User.username" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label asp-for="User.email">Email</label>
                                    <div class="input-group mb-3">
                                        @Html.EditorFor(model => model.User.email, new { htmlAttributes = new { id = "email", @class = "form-control", placeholder = "Email" } })
                                    </div>
                                    <span confirmPasswordError="emailError" asp-validation-for="User.email" class="text-danger"></span>
                                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

                                </div>
                                <div class="form-group">
                                    <label asp-for="User.password">Password</label>
                                    <div class="input-group mb-3">
                                        @Html.EditorFor(model => model.User.password, new { htmlAttributes = new { type = "password", id = "password", @class = "form-control", placeholder = "Password" } })
                                    </div>
                                    <span id="passwordError" asp-validation-for="User.password" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword">Confirm Password</label>
                                    <input id="confirmPassword" for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                    <span id ="confirmPasswordError" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User.location">Location</label>
                                    <div class="input-group mb-3">
                                        @Html.EditorFor(model => model.User.location, new { htmlAttributes = new { id = "location", @class = "form-control", placeholder = "Location" } })
                                    </div>
                                    <span id="locationError" asp-validation-for="User.location" class="text-danger"></span>

                                </div>
                                <button id="submitRegistration" type="submit" value="save" class="btn btn-primary">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {
        //Empty all default values in fields on start Page and disable button
        $("#username, #email, #password, #confirmPassword, #location").val('');
        $('#submitRegistration').prop('disabled', true);



        $("#username, #password, #email, #confirmPassword, #location").on('change keyup keypress keypress blur', function (e) {

            var isEmpty = false
            var isPassMatch = false
            var isError = false

            //check if there are any errors existing enable button, otherwise disable button
            if ($('#usernameError').html() != '' || $('#emailError').html() != '' || $('#passwordError').html() != '' || $('#confirmPasswordError').html() != '' || $('#locationError').html() != '') {
                //No error
                isError = false


            }
            else {
                //error
                isError = true

            }

            //check if there are any empty fields existing enable button, otherwise disable button
            if ($('#username').val() == '' || $('#email').val() == '' || $('#password').val() == '' || $('#confirmPassword').val() == '' || $('#location').val() == '') {
                isEmpty = true


            }
            else {
                isEmpty = false

            }

            //Check if confirm password == password, if not, disable button
            if (
                ($("#confirmPassword").val() != $("#password").val()) && $("#confirmPassword").val() != '') {
                isPassMatch = true
                $('#confirmPasswordError').html('* Passwords do not match');

            } else {
                isPassMatch = false
                $('#confirmPasswordError').html('');


            }


            //check if the button should ultimately be enabled or disabled
            if (isEmpty || isPassMatch || isError) {

                $('#submitRegistration').prop('disabled', true);
            } else {
                $('#submitRegistration').prop('disabled', false);
            }

        });
    });


</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}