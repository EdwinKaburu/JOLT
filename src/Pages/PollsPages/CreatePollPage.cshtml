@page
@model ContosoCrafts.WebSite.Pages.PollsPages.CreatePollPageModel
@{

    <div class="container">
        <h3 class="clearfix">@Model.Message</h3>

        <hr />

        <form method="post" asp-page="CreatePollPage"> 
            <div class="form-group">
                <label>Title</label>
                <input type="text" asp-for="CreatePoll.CreateTitle" name="CreateTitle" class="form-control" placeholder="Enter Title">
            </div>

            <div class="form-group">
                <label>Description</label>
                <input type="text" asp-for="CreatePoll.CreateDescription"  name="CreateDescription" class="form-control" placeholder="Enter Description">
            </div>

            <div class="form-group">
                <h5>Enter Opinions</h5>
                <div class="col-auto">
                    <label>Opinion Item 1</label>
                    <input type="text" asp-for="CreatePoll.CreateOpinionOne" name="CreateOpinionOne" class="form-control" placeholder="Enter Opinion One">

                </div>

                <div class="col-auto">
                    <label>Opinion Item 2</label>
                    <input type="text" asp-for="CreatePoll.CreateOpinionTwo" name="CreateOpinionTwo" class="form-control" placeholder="Enter Opinion Two">

                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Poll</button>

            </div>

        </form>
    </div>

}
