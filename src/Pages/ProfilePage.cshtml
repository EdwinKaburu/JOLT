@page
@using ContosoCrafts.WebSite.Models
@using ContosoCrafts.WebSite.Services
@inject JsonFileUserService UserService
@model ContosoCrafts.WebSite.Pages.ProfilePageModel



@{
    var cookieValue = Request.Cookies["nameCookie"];
    //int id = 947498;

    UserModel user = UserService.GetUser(cookieValue.ToString());

    //Model.UpdateUser.UpdateID = user.userID;

    <h3 class="clearfix">@Model.Message</h3>

    <div class="container">

        <div class="row">
            <div class="col-12">
                <h3> Welcome @user.username </h3>
            </div>
            <div class="col-12">
                <hr />
            </div>
            <div class="col">

                <div class="container-fluid">
                    <div>
                        <h5> Profile Information </h5>
                        <hr />
                    </div>
                    <div class="row" style="font-size:20px">
                        <div class="col-6"> User ID:   </div>
                        <div class="col-6"> @user.userID  </div>

                        <div class="col-6"> User Name:  </div>
                        <div class="col-6"> @user.username  </div>

                        <div class="col-6"> User Email:  </div>
                        <div class="col-6"> @user.email  </div>

                        <div class="col-6"> User Password:  </div>
                        <div class="col-6"> @user.password  </div>

                        <div class="col-6"> User Location:  </div>
                        <div class="col-6"> @user.location  </div>
                    </div>
                </div>


            </div>
            <div class="col">

                <form method="post" asp-page="ProfilePage">
                    <h5> Update Information </h5><hr />
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="inputEmail4">User Name</label>
                            <input type="hidden" asp-for="UpdateUser.UpdateID" name="UpdateID" value="@user.userID" class="form-control" placeholder="@user.userID" />

                            <input type="text" asp-for="UpdateUser.UpdateName" name="UpdateName" value="@user.username" class="form-control" placeholder="@user.username">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">User Email</label>
                            <input type="text" asp-for="UpdateUser.UpdateEmail" name="UpdateEmail" value="@user.email" class="form-control" placeholder="@user.email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">User Password</label>
                            <input type="text" asp-for="UpdateUser.UpdatePassword" name="UpdatePassword" value="@user.password" class="form-control" placeholder="@user.password">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">User Location</label>
                            <input type="text" asp-for="UpdateUser.UpdateEmail" name="UpdateLocation" value="@user.location" class="form-control" placeholder="@user.location">
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                    </div>

                </form>

            </div>
        </div>

        <hr />
        
        <div class="row">
            <div class="col-auto">

                <form method="post" asp-page-handler="DeleteProfile">
                    <button value="@user.userID" name="id" type="submit" class="btn btn-primary">Delete Profile</button>
                </form>
            </div>

            <div class="col-auto">

                <a asp-page="/PollsPage" class="btn btn-outline-success">Create Polls Profile</a>
            </div>
        </div>
        <br />

    </div>
}
