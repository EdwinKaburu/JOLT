@page

@model ContosoCrafts.WebSite.Pages.Login_WelcomeModel

@{
    ViewData["Title"] = "Login_Welcome";

    // Get the Query String
    var sample = Request.QueryString.Value;

    if (sample != null)
    {
        // Extract Query with UserName
        string cookieValue = sample.Substring(9, (sample.Length - 9));

        // Make that extraction a Cookie Value
        HttpContext.Response.Cookies.Append("nameCookie", cookieValue);
    }
}



<div class="container">

    <h3 class="clearfix"> Choose Wisely </h3>
    <hr />
    <div class="row">
        <div class="col">

            @* direct to login page*@
            <a asp-page="/Index"class="btn btn-outline-success">Go To Polls Page</a>

        </div>

        <div class="col">

            @* direct to user profile page*@
            <a asp-page="/UserPages/ProfilePage" class="btn btn-outline-success"> Go to Profile </a>

        </div>
    </div>
</div>