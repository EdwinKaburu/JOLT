@page

@model ContosoCrafts.WebSite.Pages.LoginPageModel

@{
    ViewData["Title"] = "Login";
}

<head>

    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

</head>

<body>
    <div class=" container">
        <h3>Login Form</h3>
        @Model.Msg
        <div class="card-body">
            <form id='submitLoginInfo' method="post" asp-page="Login">
                @*Take useranme*@
                <div class="form-group">
                    <label asp-for="UserLoginInput.Username">Username</label>
                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.UserLoginInput.Username, new { htmlAttributes = new { id = "username", @class = "form-control", placeholder = "Username" } })
                    </div>
                    <span id="usernameError" asp-validation-for="UserLoginInput.Username" class="text-danger"></span>
                </div>
                @*Take Password*@
                <div class="form-group">
                    <label asp-for="UserLoginInput.Password">Password</label>
                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.UserLoginInput.Password, new { htmlAttributes = new { id = "password", @class = "form-control", placeholder = "Password" } })
                    </div>
                    <span id="usernameError" asp-validation-for="UserLoginInput.Password" class="text-danger"></span>
                </div>

                <button id="submitLoginInfo" type="submit" value="save" class="btn btn-primary">Click to Login</button>
            </form>
        </div>

    </div>
</body>